{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "typeRoots": ["./node_modules/@types", "./src/types"], // Ensure this points to the folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/types/**/*"], // Ensure all type files are included
  "exclude": ["node_modules"]
}
